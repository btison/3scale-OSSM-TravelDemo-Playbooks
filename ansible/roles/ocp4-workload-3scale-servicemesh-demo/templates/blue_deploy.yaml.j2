kind: Deployment
apiVersion: apps/v1
metadata:
  name: travels-demo-ui
  namespace: blue-portal
  labels:
    app: travels-demo-ui
spec:
  replicas: 1
  selector:
    matchLabels:
      app: travels-demo-ui
  template:
    metadata:
      labels:
        app: travels-demo-ui
        deploymentconfig: travels-demo-ui
    spec:
      containers:
        - name: travels-demo-ui
          image: quay.io/redhat-servicemesh-apim-demo/travels-demo-ui:final
          ports:
            - containerPort: 8080
              protocol: TCP
          env:
            - name: NODE_ENV
              value: prod
            - name: PORT
              value: '8080'
            - name: WHOAMI
              value: blue
            - name: API_GET_CITIES
              value: https://traveldemo-istio-partner-product-3scale-apicast-production.{{ route_subdomain }}/travels
            - name: API_GET_DETAILS_FOR_CITY
              value: https://traveldemo-istio-partner-product-3scale-apicast-production.{{ route_subdomain }}/travels
            - name: API_USER_KEY_NAME
              value: user_key
            - name: API_USER_KEY_VALUE
              value: bluesecret
          imagePullPolicy: IfNotPresent
---
kind: Service
apiVersion: v1
metadata:
  name: travels-demo-ui
  namespace: blue-portal
  labels:
    app: travels-demo-ui
spec:
  ports:
    - name: 8080-tcp
      protocol: TCP
      port: 8080
      targetPort: 8080
  selector:
    app: travels-demo-ui
---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: travels-blue-ui
  namespace: blue-portal
spec:
  path: /
  to:
    kind: Service
    name: travels-demo-ui
    weight: 100
  port:
    targetPort: 8080-tcp
---